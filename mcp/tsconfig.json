{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "jsxImportSource": "@alloy-js/core",

    /* Linting */
    "strict": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
